<?xml version="1.0" encoding="utf-8" ?>
<widget
    id="scaletech.imagedefectlocator.ImageDefectLocator"
    pluginWidget="true"
    needsEntityContext="true"
    offlineCapable="true"
    supportedPlatform="Web"
    xmlns="http://www.mendix.com/widget/1.0/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../node_modules/mendix/custom_widget.xsd"
>
    <name>Image Defect Locator</name>
    <description>Widget to locate and mark defects on images.</description>
    <icon />
    <properties>
        <propertyGroup caption="Data source">
            <property key="ImageUrl" type="image" required="true">
                <caption>Thumbs Up Image</caption>
                <description>Select an image to be displayed in the widget.</description>
            </property>
            <property key="objectsDatasource" type="datasource" isList="true" required="false">
                <caption>Selectable objects</caption>
                <description>This property supplies a list of objects for displaying &#xA;markers or selectable items in the widget's list view</description>
            </property>
            <property key="XPositionAttribute" type="attribute" required="false">
                <caption>XPosition (path)</caption>
                <description />
                <attributeTypes>
                    <attributeType name="String" />
                </attributeTypes>
            </property>
            <property key="YPositionAttribute" type="attribute" required="false">
                <caption>YPosition (path)</caption>
                <description />
                <attributeTypes>
                    <attributeType name="String" />
                </attributeTypes>
            </property>
            <property key="noteAttribute" type="attribute" required="false">
                <caption>Note (path)</caption>
                <description />
                <attributeTypes>
                    <attributeType name="String" />
                </attributeTypes>
            </property>
            <property key="isMarker" type="boolean" defaultValue="false">
	            <caption>Editable</caption>
	            <description>To mark the image select yes on editable section </description>
            </property>

        </propertyGroup>
        <propertyGroup caption="Events">
            <property key="onChangeAction" type="action" required="false">
                <caption>onChange Image Action</caption>
                <description>Action to trigger after uploading a file/image</description>
            </property>
            <property key="markerAction" type="action" required="false">
                <caption>onChange Marker Action</caption>
                <description>Triggered when a marker state is updated.</description>
            </property>
        </propertyGroup>
    </properties>
</widget>
